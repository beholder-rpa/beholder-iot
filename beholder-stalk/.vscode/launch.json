    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (remote console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "publish",
            "program": "/home/pi/beholder-stalk/beholder-stalk.dll",
            "args": [],
            "cwd": "/home/pi/beholder-stalk",
            "stopAtEntry": false,
            "console": "internalConsole",
            "pipeTransport": {
                "pipeCwd": "${workspaceFolder}",
                "pipeProgram": "ssh",
                "pipeArgs": [
                    "pi@beholder-01.local"
                ],
                "debuggerPath": "sudo /home/pi/vsdbg/vsdbg"
            } 
        }
    ]
}